<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <RelativeLayout
        android:id="@+id/addPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_border_bottom">

        <include layout="@layout/merge_fragment_mainpage_createpost" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addPost">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/publicPosts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/public_post" />

            <CheckBox
                android:textColorHighlight="@color/colorBlue"
                android:id="@+id/friendPosts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friends_only" />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>