<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgv_arrow_back_merge_topbar_back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgv_arrow_back_merge_topbar_back_arrow"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2mm"
                >
                <TextView
                    android:id="@+id/txtv_post_created_firstname_merge_topbar_back_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ahmad"
                    style="@style/txtv_style1"
                    />

            </RelativeLayout>

        </RelativeLayout>
    </com.google.android.material.appbar.CollapsingToolbarLayout>
</RelativeLayout>